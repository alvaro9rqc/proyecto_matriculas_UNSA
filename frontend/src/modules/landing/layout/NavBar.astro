---
import Logo from '@/assets/logo.svg';
import SignInModal from '@/modules/auth/components/SignInModal';
import Button from '@/modules/landing/ui/Button.astro';
---
<nav class="flex justify-between px-4 py-2">
  <div class="inline-flex items-center">
    <Logo class="h-6" />
    <span class="ml-2 text-lg font-semibold">Tuitions</span>
  </div>
  <div class="flex gap-2">
    <Button variant="muted">
      Beneficios
    </Button>
    <Button variant="muted">
      Precios
    </Button>
    <SignInModal client:load />
    <Button variant="secondary">
      Contactar a ventas
    </Button>
  </div>
</nav>
