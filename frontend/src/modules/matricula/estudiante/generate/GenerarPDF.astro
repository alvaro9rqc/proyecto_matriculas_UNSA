// El script se asegura de que jsPDF esté disponible en el navegador
<head>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
</head>

<button class="boton-pdf" onclick="generarPDF()">Generar Matrícula</button>

<script>
  async function generarPDF() {
    const { jsPDF } = window.jspdf;
    const doc = new jsPDF();
    doc.text("a", 10, 10);
    doc.save("matricula.pdf");
  }
</script>

<style>
  .boton-pdf {
    margin-left: 1.5rem;
    background-color: #e5e7eb;
    color: black;
    font-size: 0.75rem;
    font-weight: 600;
    border-radius: 0.375rem;
    padding-left: 1rem;
    padding-right: 1rem;
    padding-top: 0.25rem;
    padding-bottom: 0.25rem;
    user-select: none;
    border: none;
    cursor: pointer;
    transition: background-color 0.2s ease;
  }

  .boton-pdf:hover {
    background-color: #d1d5db;
  }
</style>
