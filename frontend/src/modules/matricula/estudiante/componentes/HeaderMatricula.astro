<header>
        <div class="flex items-center gap-2">
          <i class="fas fa-gem text-xs"></i>
          <span>Matriculas 2025</span>
        </div>
        <div class="flex-1"></div>
        <div class="text-right text-xs leading-4">
          <div class="font-semibold">Juan apellido apellido</div>
          <div>Alumno</div>
        </div>
        <button
          class="ml-6 bg-gray-200 text-black text-xs font-semibold rounded-md px-4 py-1 select-none hover:bg-gray-300"
          type="button"
        >
          Contactenos
        </button>
</header>

<style>
    header {
        height: 10%;
        width: 86%;
        gap: 0.5rem;
        display: flex;
        position: fixed;
        top: 0;
        right: 0;
        padding-left: 1.5rem;
        padding-right: 1.5rem;
        padding-top: 0.75rem;
        padding-bottom: 0.75rem;
        border-bottom: 1px solid black;
        align-items: center;


        font-size: 0.875rem;   /* text-sm */
        font-weight: 600;      /* font-semibold */
        user-select: none;     /* select-none */
    }

  
          
  
    header > div:first-child {
        display: flex;
        align-items: center;
        gap: 0.5rem;           /* gap-2 = 0.5rem */
    }




    button {
        margin-left: 1.5rem;   /* ml-6 = 1.5rem */
        background-color: #e5e7eb; /* bg-gray-200 */
        color: black;
        font-size: 0.75rem;    /* text-xs */
        font-weight: 600;      /* font-semibold */
        border-radius: 0.375rem; /* rounded-md = 6px = 0.375rem */
        padding-left: 1rem;    /* px-4 = 1rem */
        padding-right: 1rem;
        padding-top: 0.25rem;  /* py-1 = 0.25rem */
        padding-bottom: 0.25rem;
        user-select: none;
        border: none;
        cursor: pointer;
        transition: background-color 0.2s ease;
    }

    button:hover {
        background-color: #d1d5db; /* hover:bg-gray-300 */
    }


</style>
