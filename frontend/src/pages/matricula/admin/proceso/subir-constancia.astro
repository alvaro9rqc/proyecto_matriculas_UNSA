---
import GridPageLayout from '@/modules/core/layouts/GridPageLayout.astro';
import LogoExtended from '@/modules/core/ui/LogoExtended.astro';
import SubtitlePage from '@/modules/core/ui/SubtitlePage.astro';
import TitlePage from '@/modules/core/ui/TitlePage.astro';
import Button from '@/modules/landing/ui/Button.astro';
---

<GridPageLayout title="Plantilla de constancia">
  <LogoExtended class="col-span-2 self-end justify-self-center row-auto" size="xl" />
  <div class="flex flex-col gap-4">
    <TitlePage>Constancia de matrícula</TitlePage>
    <SubtitlePage>
      Indícanos el formato del documento de constancia de matrícula. Te mostramos un ejemplo para que veas que datos se pueden incluir.
    </SubtitlePage>
  </div>

  <div class="flex flex-col gap-y-4 place-self-center items-center">
    <Button>
      Descargar ejemplo
    </Button>
    <Button as="a" href="/matricula/admin/proceso/listos">
      Subir formato
    </Button>
  </div>
</GridPageLayout>
