---
import FlyerCounter from './FlyerCounter.tsx';
---

<div class="w-full my-12 grid grid-cols-2 grid-rows-[repeat(2,_minmax(350px,_1fr))] md:grid-rows-[repeat(2,_minmax(350px,_1fr))] gap-4">
  <FlyerCounter
    client:load
    until={20000}
    exp="peticiones por segundo"
    className="col-span-2"
  />
<FlyerCounter
  client:load
  until={1000}
  exp="matriculados por minuto"
/>
<FlyerCounter
  client:load
  until={100}
  until={50}
  exp="ms de carga"
/>
</div>
